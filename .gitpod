ports:
  - port: 9000
    onOpen: open-preview

tasks:
  - before: |
      export SONAR_JDBC_USERNAME=sonar
      export SONAR_JDBC_PASSWORD=sonar
      export SONAR_JDBC_URL=jdbc:postgresql://db:5432/sonarqube
      export SONAR_ES_BOOTSTRAP_CHECKS_DISABLE='true'
      export POSTGRES_USER=sonar
      export POSTGRES_PASSWORD=sonar
      export POSTGRES_DB=sonarqube
      export PGDATA=pg_data:/var/lib/postgresql/data/pgdata
vscode:
  extensions:
    - SonarSource.sonarlint-vscode
    - adisreyaj.sonarqube-status
